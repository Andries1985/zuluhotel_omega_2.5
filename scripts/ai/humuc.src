Const ENDHAIR := 0x2060;

var me := Self();
var masterserial := GetObjProperty( me , "master" );
var master := SystemFindObjectBySerial( masterserial );
var mypack := FindMyPack(me.serial);
var now;
var lastvamp;
var mymana;
var specbonus;
