function DeleteFence ( lee )
	var Near;
	var ispvpfence;
	Near := ListItemsNearLocation( lee.x , lee.y , lee.z , 50, "ilshenar");
	foreach item in Near
		ispvpfence := GetObjProperty( item, "pvpfence");
		if (ispvpfence)
			DestroyItem(item);
		endif
	endforeach
endfunction

		