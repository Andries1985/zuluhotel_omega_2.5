
include "include/spelldata";
include "include/client";
include "include/attributes";
program summon_fire( parms, spell_id )

	var circle := 8;
	var caster;
	var cast_loc;
	var fromhit;

	if (GetObjProperty(caster, CLASSEID_PALADIN))
		SendSysMessage(caster, "Paladins are restricted from using " + spell_id + "!");
		return;
	endif

	if (parms[1] == "#MOB")
		caster := parms[2];
		cast_loc := parms[3];
		if (parms[4])
			circle := parms[4];
		endif
		if (parms[5])
			fromhit := parms[5];
		endif

	else
		caster := parms;
		// For scrolls, StartSpellScript isn't working >:(
		if (TypeOf(parms) == "Array")
			caster := parms[1];
			spell_id := parms[2];
		endif
		if (TryToCast( caster, spell_id ) != SUCCESS);
			EraseObjProperty(caster, "#Casting");
			return 0;
		endif
		cast_loc := CanTargetArea(caster, circle);
		if (!cast_loc)
			return;
		endif
	endif
	

	SummonCreature( caster , "fireelemental" , cast_loc );

endprogram
